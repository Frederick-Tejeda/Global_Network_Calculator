---
import Header from '../components/Header.jsx';
import "../styles/global.css";
const title = "Global Network Calculator";
const { subTitle } = Astro.props;
const { AUTH_ROUTE } = import.meta.env;
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<!-- <meta name="generator" content={Astro.generator} /> -->
		<title>{ title } | { subTitle } </title>
	</head>
	<body>
		<Header title={title} api={AUTH_ROUTE} client:load/>
		<main>
			<slot />
		</main>
		<footer>
			<p>&copy; {new Date().getFullYear()} { title }</p>
		</footer>
	</body>
</html>
<style>
	:root{
		--title: 30px;
		--subtitle: 24px;
		--text: 18px;
		--small-text: 16px;
		--black: rgb(30, 30, 30);
	}
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
		border-sizing: border-box;
		font-family: Arial, Helvetica, sans-serif;
	}
	body{
		display: grid;
		min-width: 100dvh;
		grid-template-rows: auto 1fr auto;
	}
	main, footer{  padding: 0 20px; }
	footer{
		background-color: ;
		text-align: center;
		background-color: var(--black);
		color: white;
		font-size: var(--small-text);
	}
</style>